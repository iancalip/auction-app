<% if @product.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @product, class: 'form') do |f|%>
    <div class="form-group">
        <%= f.label :name, class: 'form-label mb-0' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :weight, class: 'form-label mb-0' %>
        <%= f.number_field :weight, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :width, class: 'form-label mb-0' %>
        <%= f.number_field :width, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :height, class: 'form-label mb-0' %>
        <%= f.number_field :height, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :depth, class: 'form-label mb-0' %>
        <%= f.number_field :depth, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :category, class: 'form-label mb-0' %>
        <%= f.text_field :category, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :description, class: 'form-label mb-0' %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group mt-4">
        <%= f.label :image, class: 'form-label' %>
        <%= f.file_field :image, id: 'image', class: 'form-control-file' %>
    </div>
    <div class="form-group mt-4">
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
    </div>
<% end %>
