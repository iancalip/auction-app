<% if @lot.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @lot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @lot, class: 'form') do |f|%>
    <div class="form-group">
        <%= f.label :code, class: 'form-label mb-0' %>
        <%= f.text_field :code, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :start_date, class: 'form-label mb-0' %>
        <%= f.date_field :start_date, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :end_date, class: 'form-label mb-0' %>
        <%= f.date_field :end_date, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :minimum_bid, class: 'form-label mb-0' %>
        <%= f.number_field :minimum_bid, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= f.label :minimum_bid_difference, class: 'form-label mb-0' %>
        <%= f.number_field :minimum_bid_difference, class: 'form-control' %>
    </div>
    <div class="form-group mt-4">
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
    </div>
<% end %>
